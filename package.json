{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:aurelien-brabant/camagaru.git",
  "author": "Aurelien Brabant",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon",
    "build": "tsc --rootDir ./src --outDir ./build",
    "start": "node ./build/index.js",
    "format": "prettier --write \"./src/**/*.ts\" \"./src/*\"",
    "fmt": "yarn format",
    "tailwind:css": "postcss ./src/public/css/tailwind.css -o ./src/public/css/style.css"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "exec": "yarn tailwind:css && ts-node ./src/index.ts"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "autoprefixer": "^10.4.7",
    "nodemon": "^2.0.18",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tailwind": "^4.0.0",
    "tailwindcss": "^3.1.4",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  }
}
